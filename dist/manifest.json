{
    "manifest_version": 3,
    "name": "Onyx by LLMx",
    "description": "Save prompts. Insert anywhere. Minimal. Fast.",
    "version": "0.0.1",
    "action": {
      "default_popup": "popup.html"
    },
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    
   "background": {
    "service_worker": "background.js"
  },

    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],  

    "permissions": ["storage", "activeTab", "scripting", "commands"],
    "host_permissions": ["<all_urls>"],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+X",
          "mac": "Command+Shift+X"
        },
        "description": "Toggle Onyx popup"
      }
    }
  }
  